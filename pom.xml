<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dbmaintain</groupId>
  <artifactId>dbmaintain-parent</artifactId>
  <packaging>pom</packaging>
  <version>1.0-SNAPSHOT</version>
  <!-- Project information -->
  <name>${project.artifactId}</name>
  <url>http://www.dbmaintain.org/</url>
  <organization>
    <name>sourceforge.net</name>
    <url>http://sf.net</url>
  </organization>
  <properties>
    <jdk.level>1.5</jdk.level>
  </properties>
  <modules>
    <module>dbmaintain</module>
    <module>dbmaintain-maven-plugin</module>
    <module>dbmaintain-integrationtest</module>
  </modules>
  <description>
        DbMaintain enables automatic roll-out of updates to a relational database. It brings database scripts into version control just like 
        regular source code and can be used to transparently deploy databases from development to production.
    </description>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <ciManagement>
    <system>hudson</system>
    <url>http://davidkarlsen.com/hudson/job/dbmaintain/</url>
    <notifiers>
      <notifier>
        <type>email</type>
        <sendOnError>true</sendOnError>
        <sendOnFailure>true</sendOnFailure>
        <sendOnSuccess>true</sendOnSuccess>
        <sendOnWarning>true</sendOnWarning>
        <configuration>
          <address>david@davidkarlsen.com</address>
        </configuration>
      </notifier>
    </notifiers>
  </ciManagement>
  <!-- Environment Settings -->
  <issueManagement>
    <system>jira</system>
    <url>http://jira.unitils.org/browse/DBM</url>
  </issueManagement>
  <scm>
    <connection>scm:svn:https://dbmaintain.svn.sourceforge.net/svnroot/dbmaintain/trunk</connection>
    <developerConnection>scm:svn:https://dbmaintain.svn.sourceforge.net/svnroot/dbmaintain/trunk</developerConnection>
    <url>http://dbmaintain.svn.sourceforge.net/viewvc/dbmaintain/</url>
  </scm>
  <mailingLists>
    <mailingList>
      <name>User forum</name>
      <archive>http://sourceforge.net/forum/forum.php?forum_id=868604</archive>
    </mailingList>
  </mailingLists>
  <!-- Remote repository -->
  <distributionManagement>
    <repository>
      <id>sourceforge-repository</id>
      <url>sftp://shell.sourceforge.net/home/groups/d/db/dbmaintain/htdocs/m2-repo</url>
    </repository>
  </distributionManagement>
  <!-- Build Settings -->
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>${jdk.level}</source>
            <target>${jdk.level}</target>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <goals>assembly:assembly,deploy</goals>
            <tagBase>https://dbmaintain.svn.sourceforge.net/svnroot/dbmaintain/tags/releases</tagBase>
          </configuration>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <configuration>
            <outputEncoding>ISO-8859-1</outputEncoding>
            <!--templateFile>${basedir}/src/site/maven-site.vm</templateFile-->
         </configuration>
         </plugin>

      </plugins>
    </pluginManagement>
  </build>
  <developers>
    <developer>
      <id>davidkarlsen</id>
      <email>david@davidkarlsen.com</email>
      <name>David J. M. Karlsen</name>
      <organization>sourceforge.org</organization>
      <organizationUrl>http://sf.net</organizationUrl>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>1</timezone>
      <url>http://www.davidakarlsen.com</url>
    </developer>
  </developers>
  <reporting>
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <configuration>
            <outputDirectory>${project.build.directory}/dist</outputDirectory>
            <descriptors>
                <descriptor>assembly-descriptors/assembly-dbmaintain.xml</descriptor>
                <descriptor>assembly-descriptors/assembly-dbmaintain-src.xml</descriptor>
            </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <configuration>
          <threshold>Normal</threshold>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-pmd-plugin</artifactId>
        <configuration>
          <targetJdk>${jdk.level}</targetJdk>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <configuration>
          <source>${jdk.level}</source>
          <aggregate>true</aggregate>
        </configuration>
        <reportSets>
          <reportSet>
            <reports>
              <report>javadoc</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jdepend-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javancss-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-jxr-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>taglist-maven-plugin</artifactId>
        <configuration>
          <tags>
            <tag>TODO</tag>
            <tag>FIXME</tag>
            <tag>todo</tag>
            <tag>fixme</tag>
          </tags>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>