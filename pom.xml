<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.dbmaintain</groupId>
  <artifactId>dbmaintain-parent</artifactId>
  <packaging>pom</packaging>
  <version>1.0.3-SNAPSHOT</version>
  <!-- Project information -->
  <name>dbmaintain-parent</name>
  <url>http://www.dbmaintain.org/</url>
  <organization>
    <name>sourceforge.net</name>
    <url>http://sf.net</url>
  </organization>
  <properties>
    <project.build.java.target>1.5</project.build.java.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
    <parent-basedir>${basedir}</parent-basedir>
  </properties>
  <modules>
    <module>dbmaintain</module>
    <module>dbmaintain-maven-plugin</module>
    <module>dbmaintain-integrationtest</module>
  </modules>
  <description>
        DbMaintain enables automatic roll-out of updates to a relational database. It brings database scripts into version control just like 
        regular source code and can be used to transparently deploy databases from development to production.
    </description>
  <licenses>
    <license>
      <name>Apache License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <ciManagement>
    <system>hudson</system>
    <url>http://davidkarlsen.com/hudson/job/dbmaintain/</url>
    <notifiers>
      <notifier>
        <type>email</type>
        <sendOnError>true</sendOnError>
        <sendOnFailure>true</sendOnFailure>
        <sendOnSuccess>true</sendOnSuccess>
        <sendOnWarning>true</sendOnWarning>
        <configuration>
          <address>david@davidkarlsen.com</address>
        </configuration>
      </notifier>
    </notifiers>
  </ciManagement>
  <!-- Environment Settings -->
  <issueManagement>
    <system>jira</system>
    <url>http://jira.unitils.org/browse/DBM</url>
  </issueManagement>
  <scm>
    <connection>scm:svn:https://dbmaintain.svn.sourceforge.net/svnroot/dbmaintain/trunk</connection>
    <developerConnection>scm:svn:https://dbmaintain.svn.sourceforge.net/svnroot/dbmaintain/trunk</developerConnection>
    <url>http://dbmaintain.svn.sourceforge.net/viewvc/dbmaintain/</url>
  </scm>
  <mailingLists>
    <mailingList>
      <name>User forum</name>
      <archive>http://sourceforge.net/forum/forum.php?forum_id=868604</archive>
    </mailingList>
  </mailingLists>
  <!-- Remote repository -->
  <distributionManagement>
    <repository>
      <id>dbmaintain-sourceforge-repository</id>
      <url>sftp://web.sourceforge.net/home/groups/d/db/dbmaintain/htdocs/m2-repo</url>
    </repository>
    <site>
      <id>dbmaintain-sourceforge-repository</id>
      <url>scp://shell.sourceforge.net/home/groups/d/db/dbmaintain/htdocs/</url>
    </site>
  </distributionManagement>
  <!-- Build Settings -->
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <encoding>${project.build.sourceEncoding}</encoding>
            <source>${project.build.java.target}</source>
            <target>${project.build.java.target}</target>
          </configuration>
        </plugin>
        <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-eclipse-plugin</artifactId>
        <version>2.7</version>
        <configuration>
          <downloadSources>true</downloadSources>
          <downloadJavadocs>true</downloadJavadocs>
        </configuration>
      </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-site-plugin</artifactId>
          <version>2.0</version>
          <configuration>
            <outputEncoding>${project.reporting.outputEncoding}</outputEncoding>
          </configuration>
        </plugin>
        <plugin>
          <artifactId>maven-release-plugin</artifactId>
          <configuration>
            <goals>assembly:assembly,deploy</goals>
            <tagBase>https://dbmaintain.svn.sourceforge.net/svnroot/dbmaintain/tags/releases</tagBase>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <developers>
    <developer>
      <id>davidkarlsen</id>
      <email>david@davidkarlsen.com</email>
      <name>David J. M. Karlsen</name>
      <organization>sourceforge.org</organization>
      <organizationUrl>http://sf.net</organizationUrl>
      <roles>
        <role>developer</role>
      </roles>
      <timezone>1</timezone>
      <url>http://www.davidakarlsen.com</url>
    </developer>
  </developers>
  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.2-beta-4</version>
        <configuration>
            <outputDirectory>${project.build.directory}/dist</outputDirectory>
            <descriptors>
                <descriptor>assembly-descriptors/assembly-dbmaintain.xml</descriptor>
                <descriptor>assembly-descriptors/assembly-dbmaintain-src.xml</descriptor>
            </descriptors>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>findbugs-maven-plugin</artifactId>
        <version>2.1</version>
        <configuration>
          <threshold>Normal</threshold>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-pmd-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <targetJdk>${project.build.java.target}</targetJdk>
        </configuration>
      </plugin>
      <!-- FIXME: Avoid broken build for now 
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.6</version>
        <configuration>
          <source>${project.build.java.target}</source>
        </configuration>
        <reportSets>
          <reportSet>
            <id>aggregate</id>
            <reports>
              <report>aggregate</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
      -->
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>jdepend-maven-plugin</artifactId>
        <version>2.0-beta-2</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>javancss-maven-plugin</artifactId>
        <version>2.0</version>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jxr-plugin</artifactId>
        <version>2.1</version>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>taglist-maven-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <tags>
            <tag>TODO</tag>
            <tag>FIXME</tag>
            <tag>todo</tag>
            <tag>fixme</tag>
          </tags>
        </configuration>
      </plugin>
    </plugins>
  </reporting>
</project>